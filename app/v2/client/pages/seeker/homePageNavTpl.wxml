                </view>
                <view class="weui-tab__panel">
                    <view wx:for="{{list}}" wx:key="*this" class="weui-tab__content" hidden="{{selectedId != index}}">
                        <!--view class="weui-tab__content" hidden="{{selectedId != index}}"-->
