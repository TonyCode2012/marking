<template name="releaseInfo">
    <view class="page">
        <view wx:for="{{data}}">
            <view class="weui-cells__title">{{item.title}}</view>
            <view class="weui-cells weui-cells_after-title">
                <view wx:if="{{item.type=='textarea'}}" class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea class="weui-textarea" data-id="{{index}}" data-infotype="releaseInfo" data-mode="{{mode}}" bindinput="getInputVal"
                            value="{{item.value}}" placeholder="{{item.placeHolder}}" disabled="{{mode=='show'}}" style="height: 3.3em" />
                        <view class="weui-textarea-counter">0/200</view>
                    </view>
                </view>
                <view wx:else class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">{{item.valueType}}</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input class="weui-input" data-id="{{index}}" data-infotype="releaseInfo" data-mode="{{mode}}" bindinput="getInputVal" 
                            value="{{item.value}}" disabled="{{mode=='show'}}" placeholder="请输入奖励金额"/>
                    </view>
                </view>
            </view>
        </view>
        <view class="weui-btn-area" style="text-align:center">
            <button class="weui-btn mini-btn" type="primary" bindtap="showTopTips" size="mini" hidden="{{mode!='register'}}">保存</button>
            <button class="weui-btn mini-btn" type="primary" bindtap="showTopTips" size="mini" style="margin-left:30%" hidden="{{mode!='register'}}">提交</button>
            <button class="weui-btn mini-btn" type="primary" data-infotype="releaseInfo" bindtap="editMyInfoBtn" size="mini" hidden="{{mode!='show'}}">编辑</button>
            <button class="weui-btn mini-btn" type="primary" data-infotype="releaseInfo" bindtap="cancelMyInfoBtn" size="mini" hidden="{{mode!='edit'}}">取消</button>
            <button class="weui-btn mini-btn" type="primary" data-infotype="releaseInfo" bindtap="saveMyInfoBtn" size="mini" hidden="{{mode!='edit'}}" style="margin-left:15%">保存</button>
            <button class="weui-btn mini-btn" type="primary" data-infotype="releaseInfo" bindtap="releaseInfoBtn" size="mini" hidden="{{mode!='edit'}}" style="margin-left:15%">发布</button>
        </view>
    </view>
</template>
