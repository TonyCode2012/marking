<!-- 身份识别信息 -->
<template name="identityInfoTpl">
    <view class="page">
        <!--view class="weui-cells__title"></view-->
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输您的姓名" value="{{name}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">性别</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入您的性别" value="{{gender}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">身份证号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入身份证号" value="{{identityNum}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">微信号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入微信号" value="{{wechat}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode" hidden="{{edit_vis}}">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" value="{{phoneNum}}" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode" hidden="{{!edit_vis}}">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入手机号" value="{{phoneNum}}"/>
                </view>
                <view class="weui-cell__ft">
                    <view class="weui-vcode-btn">获取验证码</view>
                </view>
            </view>
            <!--view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                        <view class="weui-input">{{time}}</view>
                    </picker>
                </view>
            </view-->
            <view class="weui-cell weui-cell_input weui-cell_vcode" hidden="{{!edit_vis}}">
                <view class="weui-cell__hd">
                    <view class="weui-label">验证码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入验证码" />
                </view>
                <view class="weui-cell__ft">
                    <image class="weui-vcode-img" src="../images/vcode.jpg" style="width: 108px"></image>
                </view>
            </view>
        </view>
        <view class="weui-cells__tips" hidden="{{!edit_vis}}">承诺:您的隐私信息绝不会被泄露</view>
        <view class="weui-btn-area" style="text-align:center">
            <button class="weui-btn mini-btn" type="primary" data-infotype="identityInfo" bindtap="editMyInfoBtn" size="mini" hidden="{{edit_vis}}">编辑</button>
            <button class="weui-btn mini-btn" type="primary" bindtap="cancelEditIdentityInfo" size="mini" hidden="{{!edit_vis}}">取消</button>
            <button class="weui-btn mini-btn" type="primary" bindtap="saveIdentityInfo" size="mini" hidden="{{!edit_vis}}" style="margin-left:30%">保存</button>
            <!--button class="weui-btn mini-btn" type="primary" bindtap="showTopTips" size="mini" style="left:50%">提交</button-->
        </view>
    </view>
</template>

