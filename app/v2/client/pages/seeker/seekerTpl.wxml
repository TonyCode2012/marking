<import src="./seekerInfoTpl.wxml" />

<template name="myReleaseTpl">
    <view class="page">
        <view class="weui-cells__title">我的要求</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请输入您对另一半的要求" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">悬赏奖励</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">人民币</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入奖励金额"/>
                </view>
            </view>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn mini-btn" type="primary" bindtap="showTopTips" size="mini" style="left:20%">保存</button>
            <button class="weui-btn mini-btn" type="primary" bindtap="showTopTips" size="mini" style="left:50%">提交</button>
        </view>
    </view>
</template>

<template name="myPushTpl">
    <view class="page">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{infoType}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                </view>
            </view>
        </view>
    </view>
</template>


<template name="myInfoTpl">
    <view class="page">
        <view class="page__bd">
            <view class="weui-tab">
                <view class="weui-navbar">
                    <block wx:for="{{infoType}}" wx:key="*this">
                        <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                            <view class="weui-navbar__title">{{item}}</view>
                        </view>
                    </block>
                    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
                </view>
                <view class="weui-tab__panel">
                    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                        <template is="identityInfoTpl" data="{{...identityInfo}}"/>
                    </view>
                    <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                        <template is="publicInfoTpl" data="{{...publicInfo}}"/>
                    </view>
                    <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                    </view>
                    <view class="weui-tab__content" hidden="{{activeIndex != 3}}">
                        <template is="myReleaseTpl" data="{{...myPush}}"/>
                    </view>
                </view>
            </view>
        </view>
    </view>
</template>
